{
  "autosave": "on_focus_change",
  "restore_on_startup": "none",
  "base_keymap": "JetBrains",

  "buffer_font_family": "Cascadia Code",
  "buffer_font_fallbacks": ["D2Coding"],
  "buffer_font_size": 14,

  "tabs": {
    "file_icons": true,
    "git_status": true
  },

  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "use_autoclose": true,

  "file_scan_exclusions": ["**/.git", "**/.DS_Store", "**/Thumbs.db"],

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },

  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },

  "preferred_line_length": 88,
  "remove_trailing_whitespace_on_save": true,
  "use_smartcase_search": true,
  "show_whitespaces": "all",
  "show_wrap": "editor_width",

  "terminal": {
    "alternate_scroll": "on",
    "copy_on_select": true,
    "font_family": "D2CodingLigature Nerd Font Propo",
    "font_size": 12,
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "theme": {
    "mode": "dark",
    "light": "Nordic",
    "dark": "Catppuccin Macchiato"
  },

  "icon_theme": {
    "dark": "Zed (Default)",
    "light": "Zed (Default)"
  },

  "project_panel": {
    "scrollbar": {
      "show": "auto"
    }
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "ollama",
      "model": "qwen3:latest"
    },
    "inline_alternatives": [
      {
        "provider": "ollama",
        "model": "gemma2"
      }
    ]
  },

  // editor 시스템 설정
  "cursor_shape": "bar",
  "confirm_quit": false,
  "auto_update": true
}
